<div class="container">
  <div class="pt-5">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
              </div>
              <%= form_for @market do |f| %>
                    <div class="row">
                      <div class="col form-group">
                        <%= f.text_field :market_name, placeholder: 'Market Name', class: 'form-control form-control-user' %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col content">
                        <%= f.text_field :market_description, class: 'form-control form-control-user' %>
                      </div>
                    </div>
                    <hr>
                    <%= f.submit 'Publish', class: 'btn btn-default btn-block' %>
                    <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal">Cancel</button>
                  <% end %>
              <hr>
              <div class="text-center">
                <%= link_to 'Forgot Password?', new_user_password_path, class:'small' %>
              </div>
              <div class="text-center">
                <%= link_to 'Already have an account? Login!', new_user_session_path, class: 'small' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-2">Provide a post </h1>
                </div>
                <p class="mb-4 text-right">
                  <div class="post-preview">
                    <p class="post-meta">Author:
                      <%= link_to current_user.full_name, users_path(@user) %>
                      <%="at #{date_today_format('%d/%m/%Y')}" %>
                    </p>
                    <div>
                      <%= flash[:notice] %>
                    </div>
                  </div>
                  <%= form_for @post do |f| %>
                    <div class="row">
                      <div class="col form-group">
                        <%= f.text_field :title, placeholder: 'Title', class: 'form-control form-control-user' %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col content">
                        <%= f.cktext_area :content, class: 'form-control form-control-user' %>
                      </div>
                    </div>
                    <hr>
                    <%= f.submit 'Publish', class: 'btn btn-default btn-block' %>
                    <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal">Cancel</button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
