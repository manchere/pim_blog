<nav class="navbar navbar-expand-lg navbar-light fixed-top bg-dark shadow" id="main-nav">
  <div class="container">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'pim_logo_white.png', width: 80, height: 30 %>
    <% end %>
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      Menu
      <i class="fas fa-bars"></i>
    </button>
    <%= render 'layouts/searchbar' %>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item p-2">
          <%= link_to root_path, class: 'btn-nav' do %>
            <span class="text">home</span>
          <% end %>
        </li>
        <li class="nav-item p-2">
          <%= link_to markets_path, class: 'btn-nav' do %>
            <span class="text">Market</span>
            <%#= render partial: 'layouts/market_dropdown', collection: @advert || 'There are no ads to be displayed' %>
          <% end %>
        </li>
        <li class="nav-item p-2">
          <%= link_to new_contact_path, class: 'btn-nav' do %>
            <span class="text">contact</span>
          <% end %>
        </li>
        <li class="nav-item p-2">
          <%= link_to plans_path, class: 'btn btn-success btn-default' do %>
            <span class="text">Upgrade</span>
            <%= image_tag 'undraw_rocket', width: 18, height: 16 %>
          <% end %>
        </li>
        <% if !user_signed_in? %>
          <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag current_user_profile_image('undraw_profile_p'), loading: 'lazy', class: 'img-profile rounded-circle', height: 35, width: 35 %>
            </a>
            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
              <%= link_to new_user_registration_path, class:'dropdown-item' do %>
                <i class="fas fa-list-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                Sign up
              <% end %>
              <%= link_to new_user_session_path, class:'dropdown-item' do %>
                <i class="fas fa-sign-in-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                Sign in
              <% end %>
              <div class="dropdown-divider"></div>
            </div>
          </li>
        <% else %>
          <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag current_user_profile_image('undraw_profile_p'), loading: "lazy", class: 'img-profile rounded-circle', height: 35, width: 35 %>
            </a>
            <div class="dropdown-menu dropdown-menu-left shadow animated--grow-in" aria-labelledby="userDropdown">
              <%= link_to admin_dashboard_path, class:'dropdown-item bg-dark text-white' do %>
                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                Admin
              <% end if current_user.admin? %>
              <%= link_to user_path(current_user), class:'dropdown-item' do %>
                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                Profile
              <% end %>
              <%= link_to new_post_path , class: 'dropdown-item' do %>
                <i class="fas fa-pen
                 fa-sm fa-fw mr-2 text-gray-400"></i>
                Write a Post
              <% end %>
              <%= link_to posts_path , class: 'dropdown-item' do %>
                <i class="fas fa-newspaper
                 fa-sm fa-fw mr-2 text-gray-400"></i>
                All your posts
              <% end %>
              <%= link_to new_post_path , class: 'dropdown-item' do %>
                <i class="fas fa-globe-africa
                 fa-sm fa-fw mr-2 text-gray-400"></i>
                Advertise
              <% end %>
              <a class="dropdown-item" href="#">
                <i class="fas fa-bookmark fa-sm fa-fw mr-2 text-gray-400"></i>
