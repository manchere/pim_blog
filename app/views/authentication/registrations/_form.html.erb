<fieldset>
  <div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <%= f.text_field :first_name, placeholder: 'First Name', class: 'form-control form-control-user', id: 'exampleFirstName' %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :last_name, placeholder: 'Last Name', class: 'form-control form-control-user', id: 'exampleFirstName' %>
    </div>
  </div>
</fieldset>
<fieldset>
  <div class="form-group">
    <%= f.email_field :email, placeholder: 'Email Address', class: 'form-control form-control-user', id: 'exampleInputEmail' %>
  </div>
  <div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <%= f.password_field :password, placeholder: 'Password', class: 'form-control form-control-user', id: 'exampleInputPassword', autocomplete: 'new-password' %>
      <div class="small">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
      </div>
    </div>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, placeholder: 'Repeat Password',  class: 'form-control form-control-user', id: 'exampleRepeatPassword' %>
    </div>
  </div>
    <div class="form-group">
    <%= f.phone_field :phone_number, placeholder: 'Phone number', class: 'form-control form-control-user', id: 'phone' %>
  </div>
</fieldset>
